#version 330 core

uniform mat4 projectionMatrix;
uniform mat4 viewMatrix;
uniform mat4 transformationMatrix;

in vec3 pos;
in vec2 uv;
in vec3 norm;

out vec3 vertFrag;
out vec2 uvFrag;
out vec3 normFrag;

void main(){
	//passed to fragment shader
	vertFrag = pos;
	uvFrag = uv;
	normFrag = norm;

	//apply matrix multiplications to get MVP transforms applied to a vertex
	gl_Position = projectionMatrix * viewMatrix * transformationMatrix * vec4(pos, 1.0);
}

